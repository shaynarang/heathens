$(document).ready(function() {

  function scrollToSection(section_id){
    section = "#" + section_id
    $('html, body').animate({
      scrollLeft: $(section).offset().left,
      scrollTop: $(section).offset().top
    }, 1400);
  }

  function addOutline(element){
    $('nav li').removeClass('highlight');
    $(element).addClass('highlight');
  }


  $('nav li img').click(function(event) {
    addOutline($(this).parent().parent());
