#contact_content
  #contact_form
    = form_for @message, url: {controller: "messages", action: "create"}, method: "post", :remote => true do |f|
      .col-md-12.col-sm-12.col-xs-12.contact_row
        .field
          = f.label :name
          - if @message.errors[:name]
            %span.contact_form_error
              = @message.errors[:name].to_sentence.downcase.capitalize
          %br
          = f.text_field :name
      .col-md-12.col-sm-12.col-xs-12.contact_row
        .field
          = f.label :email
          - if @message.errors[:email]
            %span.contact_form_error
              = @message.errors[:email].to_sentence.downcase.capitalize
          %br
          = f.text_field :email
      .col-md-12.col-sm-12.col-xs-12.contact_row
        .field
          = f.label :subject
          - if @message.errors[:subject]
            %span.contact_form_error
              = @message.errors[:subject].to_sentence.downcase.capitalize
          %br
          = f.text_field :subject
      .col-md-12.col-sm-12.col-xs-12.contact_row
        .field
          = f.label :content, "Message"
          - if @message.errors[:content]
            %span.contact_form_error
              = @message.errors[:content].to_sentence.downcase.capitalize
          %br
          = f.text_area :content
        .actions= f.submit "Send Message", :id => "contact_form_submit_button", :value => "SEND"

:javascript
  $("#contact_form input, #contact_form textarea").click(function(){
    $("#contact_form_submit_button").prop("disabled", false);
  });