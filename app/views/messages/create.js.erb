$("#content").html("<%= escape_javascript(render partial: section) %>");

<%- if notice %>
  $("#contact_form_submit_button").prop("disabled", true);
  $(".notice").hide();
  $(".notice").html("<%= escape_javascript(flash[:notice]) %>");
  $(".notice").fadeIn('medium');
  $('html,body').animate({ scrollTop: 0 }, 400);
<% end %>
